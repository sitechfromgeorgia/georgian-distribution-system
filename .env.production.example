# Georgian Distribution System - Production Environment Variables
# Copy this file to .env.production and fill in your values

# ===================================
# Application Configuration
# ===================================
NODE_ENV=production
NEXT_PUBLIC_ENVIRONMENT=production
NEXT_PUBLIC_APP_URL=https://greenland77.ge
PORT=3000

# ===================================
# Supabase Configuration
# ===================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# For database backups
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_DB_PASSWORD=your-database-password

# ===================================
# Security
# ===================================
SESSION_SECRET=generate-a-secure-random-string-min-32-characters
CSRF_SECRET=generate-another-secure-random-string

# ===================================
# Monitoring & Error Tracking
# ===================================
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=your-sentry-organization
SENTRY_PROJECT=georgian-distribution

# ===================================
# Logging
# ===================================
LOG_LEVEL=info
LOGS_DIR=/var/log/app
NEXT_PUBLIC_ENABLE_LOGGING=true

# Log Aggregation (Optional)
LOG_AGGREGATION_URL=
LOG_AGGREGATION_HOST=
LOG_AGGREGATION_PORT=
LOG_AGGREGATION_PATH=/logs
LOG_AGGREGATION_SSL=true
LOG_AGGREGATION_USERNAME=
LOG_AGGREGATION_PASSWORD=

# ===================================
# Feature Flags
# ===================================
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEMO_MODE=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_DATA=false

# ===================================
# API Configuration
# ===================================
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_MAX_RETRIES=3

# ===================================
# CDN Configuration
# ===================================
CDN_PROVIDER=cloudflare
CDN_URL=https://cdn.greenland77.ge

# Cloudflare
CLOUDFLARE_ZONE_ID=your-zone-id
CLOUDFLARE_API_TOKEN=your-api-token

# CloudFront (if using AWS)
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
AWS_REGION=us-east-1

# ===================================
# Database Backup
# ===================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_DIR=/var/backups/georgian-distribution

# S3 for backup storage (Optional)
S3_BUCKET=georgian-distribution-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ===================================
# CORS Configuration
# ===================================
NEXT_PUBLIC_CORS_ORIGINS=https://greenland77.ge,https://www.greenland77.ge

# ===================================
# Performance
# ===================================
NEXT_TELEMETRY_DISABLED=1

# ===================================
# Build Configuration
# ===================================
ANALYZE=false
SPEED_BENCHMARK=false

# ===================================
# Notes
# ===================================
# - Never commit this file with real values to version control
# - Store sensitive values in GitHub Secrets or secret management system
# - Rotate credentials regularly
# - Use strong, unique values for all secrets
